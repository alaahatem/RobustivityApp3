                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    custom:donut_finished_color="@color/colorAccent"
                    custom:donut_text_color="@color/colorAccent"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintEnd_toEndOf="parent"
                    custom:layout_constraintHorizontal_bias="0.75"
                    custom:layout_constraintStart_toStartOf="parent"
                    custom:layout_constraintTop_toTopOf="parent"
                    custom:layout_constraintVertical_bias="0.075" />


                <TextView
                    android:id="@+id/project_expect_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Expected Progress "
                    android:textColor="@color/colorAccent"
                    android:visibility="visible" />

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/expected_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    custom:donut_finished_color="@color/colorAccent"
                    custom:donut_text_color="@color/colorAccent"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintEnd_toEndOf="parent"
                    custom:layout_constraintHorizontal_bias="0.75"
                    custom:layout_constraintStart_toStartOf="parent"
                    custom:layout_constraintTop_toTopOf="parent"
                    custom:layout_constraintVertical_bias="0.075" />


               <!-- <TextView
                    android:id="@+id/project_velocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
