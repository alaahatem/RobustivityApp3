                    android:visibility="visible" />

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/velocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
