                    custom:layout_constraintStart_toStartOf="parent"
                    custom:layout_constraintTop_toTopOf="parent"
                    custom:layout_constraintVertical_bias="0.075" />-->

            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

            <Button
                android:id="@+id/export"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Export as PDF"
                android:textColor="@color/colorPrimaryDark"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintEnd_toEndOf="parent"
                custom:layout_constraintHorizontal_bias="0.916"
                custom:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintTop_toTopOf="parent"
                custom:layout_constraintVertical_bias="0.898" />

               <Button
                   android:id="@+id/export_excel"
                   android:layout_width="wrap_content"
                   android:layout_height="52dp"
                   android:layout_marginBottom="8dp"
                   android:layout_marginEnd="8dp"
                   android:layout_marginStart="8dp"
                   android:layout_marginTop="8dp"
                   android:text="Export Excel sheet"
                   android:textColor="@color/colorPrimaryDark"
                   custom:layout_constraintBottom_toBottomOf="parent"
                   custom:layout_constraintEnd_toEndOf="parent"
                   custom:layout_constraintHorizontal_bias="0.916"
                   custom:layout_constraintStart_toStartOf="parent"
                   custom:layout_constraintTop_toTopOf="parent"
                   custom:layout_constraintVertical_bias="0.898" />

           </LinearLayout>



        </LinearLayout>
    </ScrollView>


