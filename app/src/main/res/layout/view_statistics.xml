<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/project_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project progress"
                android:textColor="@color/colorAccent" />

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/donut_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:donut_finished_color="@color/colorPrimaryDark"
                custom:donut_text_color="@color/colorPrimaryDark"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintEnd_toEndOf="parent"
                custom:layout_constraintHorizontal_bias="0.167"
                custom:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintTop_toTopOf="parent"
                custom:layout_constraintVertical_bias="0.075" />

            <TextView
                android:id="@+id/project_toggled_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project toggled hours"
                android:textColor="@color/colorAccent" />

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/toggled_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:donut_finished_color="@color/colorPrimaryDark"
                custom:donut_text_color="@color/colorPrimaryDark"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintEnd_toEndOf="parent"
                custom:layout_constraintHorizontal_bias="0.75"
                custom:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintTop_toTopOf="parent"
                custom:layout_constraintVertical_bias="0.075" />

            <TextView
                android:id="@+id/project_stoppage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project stoppage"
                android:textColor="@color/colorAccent" />

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/stoppage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:donut_finished_color="@color/colorPrimaryDark"
                custom:donut_text_color="@color/colorPrimaryDark"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintEnd_toEndOf="parent"
                custom:layout_constraintHorizontal_bias="0.75"
                custom:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintTop_toTopOf="parent"
                custom:layout_constraintVertical_bias="0.075" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"></com.github.mikephil.charting.charts.BarChart>

            <Button
                android:id="@+id/export"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Export as PDF"
                android:textColor="@color/colorPrimaryDark"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintEnd_toEndOf="parent"
                custom:layout_constraintHorizontal_bias="0.916"
                custom:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintTop_toTopOf="parent"
                custom:layout_constraintVertical_bias="0.898" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>