<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.robustastudio.robustivityapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="auto"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".createProfile"
            android:label="@string/title_activity_create_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".createuserprof" />
        <activity android:name=".Models.UserProfile$viewprofile"></activity>
        <activity android:name=".CreateProject.CreateProjectView"/>
        <activity android:name=".CreateTask.CreateTaskView"/>
        <activity android:name=".CreateTodo.CreateTodoView"/>
        <activity android:name=".EditTask.EditTaskView"/>
        <activity android:name=".ViewTasks.ViewTasksView"/>
        <activity android:name=".ViewTask.ViewTaskView"/>

    </application>

</manifest>